@model MostrarUsuarios
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- INCLUIR ESTE LINK Y SCRIPTS PARA BOOTSTRAP -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- hojas de estilos siempre tienen que estar (reset, root y navbaar footer) y una extraque es la de la pagina como tal-->
    <link rel="stylesheet" href="~/css/reset.css">
    <link rel="stylesheet" href="~/css/root.css">
    <link rel="stylesheet" href="~/css/navbarFooter.css">
    <link rel="stylesheet" href="~/css/layoutNuevoModificar.css">

    <title>Modificar Lectores</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-light bg-light">
        <div class="container-fluid">
            <!-- IMAGEN EN LA QUE SE HACE CLICK PARA REGRESAR A HOME -->
            <a class="navbar-brand" asp-action="HomeAdministrador" asp-controller="AdministradorLector"><img class="logoStyles logoHover" src="~/assets/img/UnibibloLogo.svg" alt=""></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- LISTA DE BOTONES ( CATALOGO, USUARIOS, GESTION DE INVENTARIO, REPORTERIA )-->
            <div class="collapse navbar-collapse " id="navbarSupportedContent">
                <ul class="navbar-nav me-auto ">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle navbarHoverStyles" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Catalogo
                        </a>
                        <!-- DROPDOWN DE USUARIOS (CON SUS RESPECTIVAS ACCIONES) -->
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" asp-action="Catalogo" asp-controller="Catalogo">Catalogo</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle navbarHoverStyles" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Usuarios
                        </a>
                        <!-- DROPDOWN DE USUARIOS (CON SUS RESPECTIVAS ACCIONES) -->
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" asp-action="VerUsuariosLectoresAdministrador" asp-controller="AdministradorLector">Ver Usuarios Lectores</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-action="UsuariosVerColaboradoresAdministrador" asp-controller="AdministradorLector">Ver Colaboradores</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle navbarHoverStyles" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Gestion de inventario
                        </a>
                        <!-- DROPDOWN DE GESTION DE INVENTARIO (CON SUS RESPECTIVAS ACCIONES) -->
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Agregar nuevos ejemplares</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Agregar area tematica</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-action="InventarioVerLibrosAdministrador" asp-controller="AdministradorLector">Ver libros</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-action="InventarioVerGrupoLibrosAdministrador" asp-controller="AdministradorLector">Ver grupos Libros</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-action="InventarioVerAreaTematicaAdministrador" asp-controller="AdministradorLector">Ver Area Tematica</a></li>

                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle navbarHoverStyles" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Reporteria
                        </a>
                        <!-- AQUI ESTA EL DROPDOWN DE REPORTERIA (CON SUS RESPECTIVAS ACCIONES) -->
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Deudores</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Devolucion de ejemplar</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Reporte general</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <main id="mainContenedor ">
        <div class="contenedorInfoStyles container-sm">
            <h1 class="py-3">Usuarios Lectores</h1>
            <!-- INPUTS DEL FORM Y BOTON PARA ENVIAR -->
            <form class="card p-5 contenedorFormStyles container-md" asp-action="CRUDBasicoUsuarios" asp-controller="AdministradorLector" method="post">
                <input type="hidden" id="accion" name="accion" value="" />
                <div class="mb-3">
                    <label for="correoUsuario" class="form-label">ID (NO MODIFICABLE)</label>
                    <input asp-for="Id" type="text" readonly class="form-control-plaintext" id="staticEmail">
                </div>
                <div class="mb-3">
                    <label for="correoUsuario" class="form-label">Primer Nombre</label>
                    <input asp-for="primerNombre" type="Text" class="form-control" aria-describedby="emailHelp" id="btnCorreoUsuario">
                </div>
                <div class="mb-3">
                    <label for="correoUsuario" class="form-label">Primer Apellido</label>
                    <input asp-for="primerApellido" type="Text" class="form-control" aria-describedby="emailHelp" id="btnCorreoUsuario">
                </div>
                <div class="mb-3">
                    <label for="correoUsuario" class="form-label">Telefono</label>
                    <input asp-for="Telefono" type="Text" class="form-control" aria-describedby="emailHelp" id="btnCorreoUsuario">
                </div>
                <div class="mb-3">
                    <label for="correoUsuario" class="form-label">Direccion</label>
                    <input asp-for="Direccion" type="Text" class="form-control" aria-describedby="emailHelp" id="btnCorreoUsuario">
                </div>

                <div class="mb-3">
                    <label for="fechaSalida" class="form-label">Fecha de finalizacion suspension</label>
                    <input asp-for="fechaSuspension" type="date" class="form-control" id="btnFechaSalida">
                </div>

                <div class="mb-3">
                    <label for="fechaSalida" class="form-label">Motivo Suspension</label>
                    <input asp-for="motivoSuspension" type="textarea" class="form-control" id="btnCorreoUsuario">
                </div>

                <div class="contenedorBotones">
                    <button type="submit" class="btn btn-primary btnContenedor" onclick="document.getElementById('accion').value = '1';">Modificar</button>
                    <button type="submit" class="btn btn-warning btnContenedor" onclick="document.getElementById('accion').value = '2';">Eliminar</button>
                    <button type="submit" class="btn btn-danger btnContenedor" onclick="document.getElementById('accion').value = '3';">Suspender</button>
                </div>

            </form>
        </div>
    </main>
    <footer class="bg-dark p-2 ">
        <div>
            Todos los derechos reservados &copy;
        </div>
    </footer>
    <!-- SCRIPTS BOOTSTRAP -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>  