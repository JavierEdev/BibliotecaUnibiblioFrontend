@model List<CatalogoModel>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Unibibblo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/root.css">
    <link rel="stylesheet" href="~/css/reset.css">
    <link rel="stylesheet" href="~/css/navbarFooter.css">
    <link rel="stylesheet" href="~/css/catalogoAdministrador.css">

</head>


<body>
    <nav class="navbar navbar-expand-sm navbar-light bg-light">
        <div class="container-fluid">
            <!-- IMAGEN EN LA QUE SE HACE CLICK PARA REGRESAR A HOME -->
            <a class="navbar-brand" asp-action="HomeAdministrador" asp-controller="AdministradorLector"><img class="logoStyles logoHover" src="~/assets/img/UnibibloLogo.svg" alt=""></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- LISTA DE BOTONES ( CATALOGO, USUARIOS, GESTION DE INVENTARIO, REPORTERIA )-->
            <div class="collapse navbar-collapse " id="navbarSupportedContent">
                <ul class="navbar-nav me-auto ">
                    <li class="nav-item ">
                        <a class="nav-link navbarHoverStyles" aria-current="page" href="#">Catalogo</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle navbarHoverStyles" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Usuarios
                        </a>
                        <!-- AQUI ESTA EL DROPDOWN DE USUARIOS (CON SUS RESPECTIVAS ACCIONES) -->
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Usuarios Lectores</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Colaboradores</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Nuevo Colaborador</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Suspender usuario</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle navbarHoverStyles" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Gestion de inventario
                        </a>
                        <!-- AQUI ESTA EL DROPDOWN DE GESTION DE INVENTARIO (CON SUS RESPECTIVAS ACCIONES) -->
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Agregar nuevos ejemplares</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Modificar ejemplares</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Modificar estado ejemplares</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Modificar cantidad disponible</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Agregar area tematica</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Modificar area tematica</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle navbarHoverStyles" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Reporteria
                        </a>
                        <!-- AQUI ESTA EL DROPDOWN DE REPORTERIA (CON SUS RESPECTIVAS ACCIONES) -->
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Deudores</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Devolucion de ejemplar</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Reporte general</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- BARRA DE BUSQUEDA DE CATALOGO -->
    <div class="container my-2">
        <form class="d-flex" action="@Url.Action("BuscarLibros", "Libros")" method="GET">
            <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Buscar">
            <button class="btn btn-outline-success" type="submit">Buscar</button>
        </form>
    </div>

    <main class="album py-5 ">
        <div id="contenedorCatalogo">
             <!-- FOR EACH PARA DESPLEGAR LOS LIBROS -->
            @foreach (var item in Model)
            {
                <div class="card shadow-sm contenedorIndividual">
                    <div class="bg-dark contenedorTexto">
                        <p class="textStyle">@item.Nombre</p>
                        <p class="textStyle">@item.Autor</p>
                    </div>

                    <div class="card-body p-2 contenedorNiv1">
                        <div class="contenedorNiv3">
                            <div>
                                <div class="contenedorNiv4">
                                    <p class="cardTextStyle px-0">Año publicacion</p>
                                    <div></div>
                                    <small class="">@item.anioPublicacion</small>
                                </div>
                                <div class="contenedorNiv4">
                                    <p class="cardTextStyle px-0">Grupo Libro</p>
                                    <div></div>
                                    <small class="">@item.grupoLibro</small>
                                </div>
                                <div class="contenedorNiv4">
                                    <p class="cardTextStyle px-0">tipo Identificador</p>
                                    <div></div>
                                    <small class="">@item.tipoIdentificador</small>
                                </div>
                                <div class="contenedorNiv4">
                                    <p class="cardTextStyle px-0">Estado</p>
                                    <div></div>
                                    <small class="">@item.estado</small>
                                </div>
                            </div>
                        </div>

                        <div class="contenedorNiv2 ">
                            <!-- BOTON PRESTAR -->
                            <form class="btn-group">
                                <button onclick="window.location.href = '/AdministradorLector/PrestamosAdministrador';" type="button" class="btn btn-sm btn-outline-secondary">Prestar</button>
                            </form>
                            <small class="text-muted">Stock: @item.enStock</small>
                        </div>
                    </div>
                </div>
            }
        </div>

        </div>
    </main>
    <footer class="bg-dark p-2 ">
        <div>
            Todos los derechos reservados &copy;
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>


